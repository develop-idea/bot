<context>
  <input pattern="(Hola|hola) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! ¿Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName!"/>
      </input>

    </context>
  </input>
  <input pattern="(Buenas|Buenas) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! ¿Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName! En que podemos ayudarte?"/>
      </input>

    </context>
  </input>
  <input pattern="(Informes|informes) *">

    <context>
      <output value="Visita http://losdeidea.com.mx/contacto"/>
    </context>
  </input>
</context>
