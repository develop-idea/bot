<context>
  <input pattern="(Hola|hola|Empezar) *">
    <output value="Hola $Name!" if="full($Name)"/>

    <context if="empty($Name)">
      <output value="Hola! ¿Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="Name" value="$Text" scope="user"/>
        <output value="Mucho gusto $Name!"/>
      </input>

    </context>
  </input>

	<output value="Cual es tu color favorito?"/>

  <context>
    <sample>
      <item>Azul</item>
      <item>Verde</item>
      <item>Morado</item>
      <item>Purpura</item>
      <item>Negro</item>
      <item>Amarillo</item>
      <item>Rosa</item>
      <item>Rojo</item>
    </sample>
    <input pattern="* $Color *">
      <output value="A mi tambien me gusta!!"/>
    </input>
  </context>

  <input pattern="(Buenas|Buenas) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! ¿Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName! En que podemos ayudarte?"/>
      </input>

    </context>
  </input>
  <input pattern="(Solicito|solicito) *">

