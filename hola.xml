<context>
  <input pattern="(Hola|hola) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! Â¿Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName!"/>
      </input>

    </context>
    <context if="empty($Ayuda)">
      <output value="En que puedo ayudarte?"/>

      <input pattern="$Text">
        <var name="Ayuda" value="$Text" scope="user"/>
        <output value="Entra a http://losdeidea.com.mx"/>
      </input>

    </context>
  </input>
</context>